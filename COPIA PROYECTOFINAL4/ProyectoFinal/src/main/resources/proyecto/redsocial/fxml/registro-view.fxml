            <Label text="Registro">
               <font>
                  <Font size="28.0" />
               </font>
            </Label>

            <TextField fx:id="txtNombre" prefWidth="300" promptText="Nombre completo" style="-fx-background-radius: 6; -fx-padding: 10;" />

            <TextField fx:id="txtCorreo" prefWidth="300" promptText="Correo electrónico" style="-fx-background-radius: 6; -fx-padding: 10;" />

            <PasswordField fx:id="txtContrasenia" prefWidth="300" promptText="Contraseña" style="-fx-background-radius: 6; -fx-padding: 10;" />

            <Button fx:id="btnRegistro" onAction="#onRegistrarse" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10 20;" text="Registrarse" />

         </children>
      </VBox>
   </children>
