<AnchorPane prefHeight="480.0" prefWidth="800.0" style="-fx-background-color: #f0f4f8;" stylesheets="@../css/estilo.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyecto.redsocial.controller.RegistroController">
